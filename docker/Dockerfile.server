# syntax=docker/dockerfile:1

ARG NODE_VERSION=22

# =============================================================================
# Dependencies stage - install all dependencies
# =============================================================================
FROM node:${NODE_VERSION}-alpine AS deps

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9 --activate

# Copy workspace configuration
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json ./
COPY packages/shared/package.json ./packages/shared/
COPY apps/server/package.json ./apps/server/

# Install all dependencies (needed for build)
RUN --mount=type=cache,id=pnpm,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

# =============================================================================
# Builder stage - build the application
# =============================================================================
FROM node:${NODE_VERSION}-alpine AS builder

ARG VERSION=dev

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@9 --activate

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/packages/shared/node_modules ./packages/shared/node_modules
COPY --from=deps /app/apps/server/node_modules ./apps/server/node_modules

# Copy source files
COPY packages/shared ./packages/shared
COPY apps/server ./apps/server
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json tsconfig.json ./

# Generate Prisma client (targets defined in schema.prisma)
RUN pnpm --filter server prisma:generate

# Build shared package
RUN pnpm --filter @davidilie/claude-code-prometheus-shared build

# Clean and build server (fresh build every time)
RUN rm -rf /app/apps/server/dist /app/apps/server/.tanstack && \
    pnpm --filter server build

# Write version file
RUN echo "${VERSION}" > /app/apps/server/version.txt

# Prepare deploy directory with all necessary files
# Merge server node_modules with root node_modules for complete dependency resolution
RUN mkdir -p /app/deploy && \
    cp /app/apps/server/package.json /app/deploy/ && \
    cp -r /app/apps/server/dist /app/deploy/dist && \
    cp -r /app/apps/server/prisma /app/deploy/prisma && \
    cp /app/apps/server/version.txt /app/deploy/ && \
    # Start with root node_modules (has pnpm structure)
    cp -r /app/node_modules /app/deploy/node_modules && \
    # Overlay server-specific node_modules
    cp -r /app/apps/server/node_modules/* /app/deploy/node_modules/ 2>/dev/null || true

# =============================================================================
# Production stage - minimal runtime image
# =============================================================================
FROM node:${NODE_VERSION}-alpine AS runner

ARG VERSION=dev
ARG TARGETPLATFORM
ARG TARGETARCH
ARG VENDOR=davidilie

# OCI Labels
LABEL org.opencontainers.image.title="claude-code-prometheus"
LABEL org.opencontainers.image.description="Track Claude Code usage across machines with Prometheus metrics"
LABEL org.opencontainers.image.url="https://github.com/DavidIlie/claude-code-prometheus"
LABEL org.opencontainers.image.source="https://github.com/DavidIlie/claude-code-prometheus"
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.vendor="${VENDOR}"
LABEL org.opencontainers.image.licenses="MIT"

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    ca-certificates \
    curl \
    tini \
    tzdata \
    && rm -rf /var/cache/apk/*


# Create non-root user
RUN addgroup --system --gid 1001 nodejs \
    && adduser --system --uid 1001 --ingroup nodejs nodejs

# Copy deployed application
COPY --from=builder --chown=nodejs:nodejs /app/deploy ./

# Copy entrypoint and Node.js HTTP adapter
COPY --chown=nodejs:nodejs docker/entrypoint.sh /app/entrypoint.sh
COPY --chown=nodejs:nodejs docker/start-server.js /app/start-server.js
RUN chmod +x /app/entrypoint.sh

# Create data and npm cache directories
RUN mkdir -p /app/data /app/.npm && chown -R nodejs:nodejs /app /app/data /app/.npm

# Environment
ENV NODE_ENV=production \
    DATABASE_URL=file:/app/data/db.sqlite \
    PORT=3000

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -fsS http://localhost:3000/api/health || exit 1

# Use tini as init system
ENTRYPOINT ["/sbin/tini", "--"]
CMD ["/app/entrypoint.sh"]
